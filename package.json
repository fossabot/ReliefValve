{
  "name": "ReliefValve",
  "version": "v2.0.0-alpha",
  "author": "l3l_aze <l3l_aze@yahoo.com>",
  "license": "MIT",
  "copyright": "Copyright Â© 2017 ${author}",
  "repository": {
    "type": "git",
    "url": "git+github.com/l3laze/ReliefValve.git"
  },
  "build": {
    "appId": "tmshvr.reliefvalve",
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "dmg"
      ]
    },
    "dmg": {
      "artifactName": "${productName}-${version}.${ext}",
      "icon": null,
      "contents": [
        {
          "x": 120,
          "y": 190
        },
        {
          "x": 450,
          "y": 190,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "nsis": {
      "deleteAppDataOnUninstall": true,
      "artifactName": "${productName}-${version}-Setup.${ext}"
    },
    "linux": {
      "category": "Utility;FileTools"
    },
    "appImage": {
      "systemIntegration": "doNotAsk"
    }
  },
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "start": "electron ./app --enable-logging",
    "dev": "NODE_ENV='development' yarn run start",
    "pack": "build --dir -lmw",
    "dist": "build",
    "dist:mac": "build -m",
    "dist:win": "build -w --ia32 --x64",
    "dist:win-32": "build -w --ia32",
    "dist:win-64": "build -w --x64",
    "dist:linux": "build -l --ia32 --x64",
    "dist:linux-32": "build -l --ia32",
    "dist:linux-64": "build -l --x64",
    "dist:all": "build -lmw --ia32 --x64",
    "dist-32": "build --ia32",
    "dist-64": "build --x64",
    "dist-32_64": "build --ia32 --x64",
    "purify-w3": "purifycss ./node_modules/w3-css/w3.css ./index.html -i -m true -o ./node_modules/w3-css/pure-w3.css",
    "purify-fa": "purifycss ./node_modules/font-awesome/css/font-awesome.min.css ./index.html -i -w .fa-file:before -m true -o ./node_modules/font-awesome/css/pure-font-awesome.min.css",
    "purify": "yarn purify-w3 && yarn purify-fa"
  },
  "devDependencies": {
    "electron": "^1.7.9",
    "electron-builder": "19.32.2",
    "purify-css": "^1.2.5"
  }
}
