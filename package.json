{
  "name": "ReliefValve",
  "version": "v1.2.2-beta",
  "author": "l3l_aze <l3l_aze@yahoo.com>",
  "license": "MIT",
  "copyright": "Copyright Â© year ${author}",
  "repository": {
    "type": "git",
    "url": "git+github.com/l3laze/ReliefValve.git"
  },
  "build": {
    "appId": "tmshvr.reliefvalve",
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "dmg"
      ]
    },
    "dmg": {
      "artifactName": "${productName}-${version}.${ext}",
      "icon": null,
      "contents": [
        {
          "x": 120,
          "y": 190
        },
        {
          "x": 450,
          "y": 190,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "nsis": {
      "oneClick": true,
      "allowUserToChangeInstallDirectory": true,
      "artifactName": "${productName}-${version}-Setup.${ext}",
      "deleteAppDataOnUninstall": true
    },
    "linux": {
      "executableName": "${productName}",
      "category": "Utility;FileTools"
    }
  },
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "start": "electron ./app --enable-logging",
    "dev": "NODE_ENV='development' npm run start",
    "pack": "build --dir -lmw",
    "dist": "build",
    "dist:mac": "build -m",
    "dist:win": "build -w --ia32 --x64",
    "dist:linux": "build -l --ia32 --x64",
    "dist:all": "build -lmw --ia32 --x64",
    "dist-32": "build --ia32",
    "dist-64": "build --x64",
    "dist-32_64": "build --ia32 --x64"
  },
  "devDependencies": {
    "electron": "^1.7.5",
    "electron-builder": "^19.22.1"
  }
}
